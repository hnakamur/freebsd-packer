{
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "http://ftp3.jp.freebsd.org/pub/FreeBSD/releases/ISO-IMAGES/10.1/FreeBSD-10.1-RELEASE-i386-disc1.iso",
      "iso_checksum": "75c7c7ed926e4c01e015a6ea917532ed",
      "iso_checksum_type": "md5",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "1000s",
      "guest_os_type": "FreeBSD",
      "headless": "false",
      "shutdown_command": "echo 'shutdown -p now' | sudo su -",
      "boot_wait": "10s",
      "http_directory": "http",
      "disk_size": 81920,
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "boot_command": [
        "<esc><wait>",
        "boot -s<enter>",
        "<wait10><wait><wait>",
        "/bin/sh<enter><wait>",
        "mdmfs -s 100m md1 /tmp<enter><wait>",
        "mdmfs -s 100m md2 /mnt<enter><wait>",
        "dhclient -l /tmp/dhclient.lease.em0 em0<enter><wait5>",
        "fetch -o /tmp/setup http://{{ .HTTPIP }}:{{ .HTTPPort }}/install_i386.sh<enter><wait><wait>",
        "bsdinstall script /tmp/setup<enter>"
      ]
    }
  ],
  "post-processors": [
    {
      "output": "./builds/freebsd-10.1-i386.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/cleanup_ufs.sh"
      ]
    }
  ]
}
